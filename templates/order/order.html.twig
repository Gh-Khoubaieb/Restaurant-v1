
{% extends 'base.html.twig' %}
{% block title 'Tous les meals' %}

{% block body %}


<div class="container">



    <h2><i class="fa fa-shopping-cart"></i> Passer une commande</h2>

    ​

    <form data-validation="" data-order-step="run" id="order-form" class="generic-form">
        ​

        <!-- Champ caché stockant le prix $mealName as $key => $value) :de vente du produit alimentaire sélectionné -->

        <input type="hidden" name="salePrice">

        ​

        <fieldset>

            <legend>Ajouter un article</legend>

            <ul style="list-style: none">

                <li>

                    <label for="meal">Nom :</label>

                    <select id="meal" name="meal">

                        {% for order in orders %}

                        <option value="{{ order.Id }}">{{ order.Name }}</option>

                   {% endfor %}


                    </select>

                    <article id="meal-details" class="meal-details no-left-label">
                        <img src="" alt="Photo du produit">
                        <p></p>
                        <span>Prix : <strong></strong></span>
                    </article>

                </li>
                <br>
                <li>

                    <label for="quantity">Quantité :</label>

                    <input id="quantity" class="quantity" type="text" maxlength="2" name="quantity"><strong id='alert'></strong>

                </li>
                <br>
                <li>

                    <button class="button button-primary no-left-label" type="submit">Ajouter</button>

                </li>

            </ul>

        </fieldset>

        ​

        <fieldset>

            <legend>Récapitulatif de la commande</legend>

            <section id="order-summary"></section>

        </fieldset>

    </form>

    ​

    <ul class="link-list">

        <li>

            <button id="validate-order" class="button button-primary" disabled>Valider la commande</button>

            <a class="button button-cancel" href="<?= $requestUrl ?>">Annuler</a>

        </li>

    </ul>


    {{ encore_entry_script_tags('app') }}



    <!-- Liste des commandes a payer-->
</div>




{% endblock %}